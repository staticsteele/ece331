8.

/*
*Program that uses uname() to get OS release and prints it 
*/

#include <stdio.h>
#include <sys/utsname.h>

int main(void)
{
        struct utsname system;
        
        //uname call returns -1 if error occured based on documentation
	if (uname(&system) == -1) {
	        printf("uname system call failed");
		return 1;
	}
	printf("Release = %s\n",system.release);
	return 0;
}

9.

/*
*Program will search command line arguments (including argv[0])
*for the string "abc" and will output the # of times it appears. 
*/

#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[])
{
        char str[] = "abc";
        int i, count = 0;
                 
        for (i = 0; i < argc; i++) {
                //strstr() returns NULL pointer if no matching substring
                if(strstr(argv[i],str) != NULL)
                        count++;        
        }
        printf("The number of \"abc\" occurances is: %d\n",count);
        return 0;
}

